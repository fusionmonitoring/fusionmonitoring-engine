{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "fusionsupervision": {
            "format": "[%(asctime)s] %(levelname)s: [%(daemon)s.%(name)s] %(message)s"
            ,"datefmt": "%Y-%m-%d %H:%M:%S"
        },
        "monitoring-log": {
            "format": "[%(my_date)s] %(levelname)s: %(message)s"
        ,"datefmt": "%Y-%m-%d %H:%M:%S"
        }
    },

    "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "fusionsupervision",
            "stream": "ext://sys.stdout"
        },
        "color_console": {
            "class": "fusionsupervision.log.ColorStreamHandler",
            "level": "DEBUG",
            "formatter": "fusionsupervision",
            "stream": "ext://sys.stdout"
        },
        "daemons": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "level": "DEBUG",
            "formatter": "fusionsupervision",
            "filename": "%(logdir)s/%(daemon)s.log",
            "when": "midnight",
            "interval": 1,
            "backupCount": 7
        },
        "event_log": {
            "class": "logging.handlers.TimedRotatingFileHandler",
            "level": "INFO",
            "formatter": "monitoring-log",
            "filename": "%(logdir)s/fusionsupervision-events.log",
            "when": "midnight",
            "interval": 1,
            "backupCount": 365
        }
    },

    "loggers": {
        "fusionsupervision": {
            "level": "INFO",
            "handlers": ["color_console", "daemons"],
            "propagate": "no"
        },
        "monitoring-log": {
            "level": "DEBUG",
            "handlers": ["console", "event_log"],
            "propagate": "no"
        }
    },

    "root": {
        "level": "ERROR",
        "handlers": []
    }
}